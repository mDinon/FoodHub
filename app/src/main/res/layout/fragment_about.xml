<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aboutFrag"
    android:name="hr.mc2.foodhub.AboutFragment"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_logo"
        android:src="@drawable/logo" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
       android:layout_marginLeft="5dp"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@+id/view_logo"
       android:layout_toEndOf="@+id/view_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mjesto di moÅ¡ jest, pit, delat, bit, spat"
        android:id="@+id/opis"
        android:layout_below="@+id/aboutRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:textSize="23dp"
        android:id="@+id/aboutRating"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/star"
        android:textAlignment="center"
        android:paddingTop="20dp"
        />

</RelativeLayout>